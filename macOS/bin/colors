#!/bin/bash

###############################################################################
# Print the color palette
###############################################################################

echo -e "\033[0;30mBLACK\t\033[0;90mBRIGHT_BLACK"
echo -e "\033[0;31mRED\t\033[0;91mBRIGHT_RED"
echo -e "\033[0;32mGREEN\t\033[0;92mBRIGHT_GREEN"
echo -e "\033[0;33mYELLOW\t\033[0;93mBRIGHT_YELLOW"
echo -e "\033[0;34mBLUE\t\033[0;94mBRIGHT_BLUE"
echo -e "\033[0;35mMAGENTA\t\033[0;95mBRIGHT_MAGENTA"
echo -e "\033[0;36mCYAN\t\033[0;96mBRIGHT_CYAN"
echo -e "\033[0;37mWHITE\t\033[0;97mBRIGHT_WHITE"
echo -e "\033[0;38mDEFAULT\t\033[0;98mBRIGHT_DEFAULT"
echo -e "\033[0mRevert to default terminal text"
